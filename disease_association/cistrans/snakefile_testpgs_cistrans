### remove the chr 19 locus from the omicspred weights file of MAN2B2
rule removechr:
	input: data_path+'SomaScan/OPGS000851.txt'
	output: data_path+'MAN2B2_nochr19_OPGS000851.txt'
	shell: '''
	awk '$2!="19" {{print}}' {input} > {output}
	'''

### PGS	MAN2B2
rule score_man2b2:
	input: pgen= data_path+'pgen/EUR_proteome.pgen',
		score=data_path+'MAN2B2_nochr19_OPGS000851.txt'
	output: sscore= data_path+'EUR_MAN2B2_nochr19.sscore' 
	params: inprefix= lambda w,input: input.pgen[:-5],
		outprefix=lambda w,output: output.sscore[:-7]
	resources: mem_mb=30000, time="5:00:00" 
	shell: '''
plink2 \
--pfile {params.inprefix} \
--score <(cat {input.score} | grep -v '#' | sed 1d | awk '{{print $2":"$3":"$4":"$5, $4, $6}} {{print $2":"$3":"$5":"$4, $4, $6}}') \
--out {params.outprefix}
'''

